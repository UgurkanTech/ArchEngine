      <PackageReference Include="SharpFontCore" Version="0.1.1" />
      <PackageReference Include="SpaceWizards.SharpFont" Version="1.0.1" />
      <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
    </ItemGroup>

